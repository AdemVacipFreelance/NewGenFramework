@using BayiPuan.MvcWebUi.HtmlHelpers
@model BayiPuan.Entities.Concrete.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/w3.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    @*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>*@
    @*<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
    
    <script src="~/Content/js/public.common.js"></script>
    <title>NewUser</title>
    <style>
        .w3-input {
            padding: 6px !important;
        }
    </style>
</head>
<body>
<div class="w3-container w3-card-4 w3-text-blue w3-margin ">
    <div class="text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="w3-center">
                    <img src="~/images/Login.png" width="90" height="90" alt="" />
                </div>
                <div class="w3-container w3-blue w3-center">
                    <h6>YENİ KULLANICILAR İÇİN ÜYELİK TALEP FORMU</h6>
                </div>
                   
                @Html.ValidationSummary(true, "", new { @class = "w3-text-red" })
                    
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-fort-awesome"></i></div>
                        <div class="w3-rest">
                            @Html.DropDownListFor(model=>model.SellerId, (IEnumerable<SelectListItem>)ViewData["SellerList"], "Lütfen Bayi Seçiniz!",new{@Class="w3-input"})
                            @Html.ValidationMessageFor(model => model.SellerId, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
                    
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-sitemap"></i></div>
                        <div class="w3-rest">
                            @Html.DropDownListFor(model=>model.UserTypeId,(IEnumerable<SelectListItem>)ViewData["UserTypeList"], "Lütfen Bayi Tipi Seçiniz!",new{@Class="w3-input"})
                            @Html.ValidationMessageFor(model => model.UserTypeId, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                        <div class="w3-rest">
                            @Html.MyEditorFor(model => model.UserName, new { htmlAttributes = new { @class = "w3-input", @placeholder = Html.DisplayNameFor(n => n.UserName) } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-id-card"></i></div>
                        <div class="w3-rest">
                            @Html.MyEditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "w3-input", @placeholder = Html.DisplayNameFor(n => n.FirstName) } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-id-card-o"></i></div>
                        <div class="w3-rest">
                            @Html.MyEditorFor(model => model.LastName, new { htmlAttributes = new { @class = "w3-input", @placeholder = Html.DisplayNameFor(n => n.LastName) } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
                        <div class="w3-rest">
                            @Html.MyEditorFor(model => model.Email, new { htmlAttributes = new { @class = "w3-input", @placeholder = Html.DisplayNameFor(n => n.Email) } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-volume-control-phone"></i></div>
                        <div class="w3-rest">
                            @Html.MyEditorFor(model => model.MobilePhone, new { htmlAttributes = new { @class = "w3-input", @placeholder = Html.DisplayNameFor(n => n.MobilePhone) } })
                            @Html.ValidationMessageFor(model => model.MobilePhone, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
              
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-birthday-cake"></i></div>
                        <div class="w3-rest">
                            @Html.MyEditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "w3-input", @*@placeholder = "DD.MM.YYYY",*@type="datetime" } })
                            @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-large fa fa-handshake-o"></i></div>
                        <div class="w3-rest">
                            @Html.CheckBoxFor(model => model.Agreement,  new { @class = "w3-check"  })
                            @Html.LabelFor(model=>model.Agreement,"Kullanıcı Sözleşmesini okudum ve kabul ediyorum.",new {@class="w3-text-green"})
                            @Html.ValidationMessageFor(model => model.Agreement, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="w3-row w3-section">
                        <div class="w3-col" style="width:50px"><i class="w3-large fa fa-envelope"></i></div>
                        <div class="w3-rest">
                            @Html.CheckBoxFor(model => model.Contact,  new { @class = "w3-check" })
                            @Html.LabelFor(model=>model.Contact,"Yenilik ve kampanyalardan E-Posta yoluyla özellikle haberdar olmak istiyorum.", new { @class = "w3-text-amber" })
                            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "w3-text-red" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="w3-half w3-row-padding">
                        <input type="submit" value="Kayıt Ol!" class="w3-button w3-block w3-section w3-green w3-ripple w3-padding" />

                    </div>
                    <div class="w3-half w3-row-padding">

                        @Html.ActionLink(@Word("General.Back").ToString(), "SignIn", "Account", null, new { @class = "w3-button w3-block w3-section w3-red w3-ripple w3-padding" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/i18n/jquery-ui-i18n.min.js"></script>
<script >
    $(document).ready(function () {

        $.datepicker.setDefaults($.datepicker.regional['tr']);
        $("input[type=datetime]").datepicker({
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true,
            dateFormat: 'dd.mm.yy',
            yearRange: "-100:+0"
        });
    });
</script>
</body>
</html>
